{% extends 'base.html.twig' %}

{% block title %}Liste des Relevés{% endblock %}

{% block body %}
<div class="container">
    <h1>Liste des Relevés</h1>

    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Date</th>
            <th>Lieu</th>
            <th>Relevé Brut</th>
            <th>Tableau</th>
            <th>Visualisation</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for releve in releve %}
            <tr>
                <td>{{ releve.date|date('d/m/Y') }}</td>
                <td>{{ releve.lieu.nom }}</td>
                <td>{{ releve.releveBrut }}</td>
                <td></td>
                <td></td>
                <td>
                    <a class="btn btn-dark" href="{{ path('app_releve_voir', {'id': releve.id}) }}">Voir</a>
                    <a class="btn btn-dark" href="{{ path('app_releve_modifier', {'id': releve.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune donnée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <hr class="my-4">
    {{ render(controller('App\\Controller\\ReleveController::ajouter')) }}
</div>
{% endblock %}
