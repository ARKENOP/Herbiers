{% extends 'base.html.twig' %}

{% block title %}Liste des Lieux{% endblock %}

{% block body %}
    <div class="container">
        <h1>Liste des Lieux</h1>

        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>ID</th>
                <th>Nom du Lieu</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for lieu in lieu %}
                <tr>
                    <td>{{ lieu.id }}</td>
                    <td>{{ lieu.nom }}</td>
                    <td>
                        <a class="btn btn-dark" href="{{ path('app_lieu_voir', {'id': lieu.id}) }}">Voir</a>
                        <a class="btn btn-primary" href="{{ path('app_lieu_modifier', {'id': lieu.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun lieu trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <hr class="my-4">
        {{ render(controller('App\\Controller\\LieuController::ajouter')) }}
        <a href="{{ path('app_releve_index') }}" class="btn btn-secondary">Revenir à la page des Relevés</a>
    </div>
{% endblock %}
